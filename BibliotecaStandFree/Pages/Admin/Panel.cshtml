    <style>
    /* Estilo general del panel */
    .staff-panel {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        margin: 0 auto;
        max-width: 1200px;
        padding: 20px;
    }

    /* Estilo del encabezado de bienvenida */
    .staff-header {
        font-size: 28px;
        font-weight: bold;
        font-family: 'Dancing Script', cursive;

        color: #333;
        margin-bottom: 30px;
        text-align: center;
    }

    .staff-header span {
        font-size: 28px;
        color: #555;
        display: block;
        margin-top: 10px;
    }

    /* Estilo de las tarjetas de acción */
    .staff-actions {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        width: 100%;
    }

    .action-card {
        background: linear-gradient(145deg, #ffffff, #e6e6e6);
        border-radius: 15px;
        box-shadow: 5px 5px 10px #bebebe, -5px -5px 10px #ffffff;
        text-align: center;
        padding: 25px 15px;
        transition: all 0.3s ease;
    }

    .action-card:hover {
        transform: translateY(-8px);
        box-shadow: 5px 5px 15px rgba(0, 0, 0, 0.3);
    }

    .action-icon {
        font-size: 50px;
        color: #555;
        margin-bottom: 15px;
    }

    .action-title {
        font-size: 20px;
        font-weight: bold;
        color: #333;
        margin-bottom: 8px;
    }

    .action-card p {
        font-size: 14px;
        color: #777;
        margin-bottom: 15px;
    }

    .action-card a {
        text-decoration: none;
        color: #fff;
        background-color: #007bff;
        padding: 10px 15px;
        border-radius: 5px;
        font-size: 14px;
        font-weight: bold;
        transition: background-color 0.3s ease;
    }

    .action-card a:hover {
        background-color: #0056b3;
    }

    /* Responsividad */
    @@media (max-width: 768px) {
    .staff-header {
        font-size: 22px;
    }

    .staff-header span {
        font-size: 18px;
    }

    .action-icon {
        font-size: 40px;
    }

    .action-title {
        font-size: 18px;
    }

    .action-card p {
        font-size: 12px;
    }
    }
</style>
